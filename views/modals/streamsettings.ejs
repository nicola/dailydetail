<div id="streamSettingsModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="streamSettingsModalLabel" aria-hidden="true">
</div>
<script id="streamSettings_tpl" type="text/html">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h4 id="streamSettingsModalLabel">Stream settings</h4>
  </div>
  <div class="modal-body">
    <form class="login-form" novalidate>
      <div class="control-group huge">
        <div class="controls">
          <input class="input-block-level login-field flat" value="{{title}}" type="text" minlength="4" id="putStreamTitle" placeholder="Title">
          <label class="login-field-icon fui-tag"></label>
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group huge">
        <div class="controls">
          <input class="input-block-level login-field flat" value="{{description}}" type="text" minlength="4" id="putStreamDescription" placeholder="Description">
          <label class="login-field-icon fui-document"></label>
          <p class="help-block"></p>
        </div>
      </div>
      <div class="control-group huge">
        <div class="controls">
          <span class="label">http://dailydetail.com/stream/</span>
          <input class="input-block-level login-field flat" value="{{url}}" type="text" minlength="4" id="putStreamUrl" placeholder="the_url">
          <label class="login-field-icon fui-link"></label>
          <p class="help-block"></p>
        </div>
      </div>
    </form>

  </div>
  <div class="modal-footer">
    <button id="putStream" class="btn btn-primary btn-large btn-embossed btn-block" data-subject="{{_id}}">Save</button>
    <a href="#" class="login-link"  data-dismiss="modal" aria-hidden="true">Cancel</a>
  </div>
</div>
</script>